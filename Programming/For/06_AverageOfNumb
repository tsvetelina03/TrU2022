#include <iostream> 
using namespace std;
    double sum = 0.00;
    int couter = 0; 
    double x;
      double n;
int main(){ 
    
    
    do{
       
        cout << "Въведете число n: " ;
        cin >> n;
        x = n; 
        couter++; 
        sum+= x;
    } while (x != 0);
    
    couter--;
    double averagre = sum / couter; 
    cout << "Среднa стойност: " << averagre;
    return 0;
}

